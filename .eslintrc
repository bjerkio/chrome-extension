{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "@bjerk/eslint-config"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "react-refresh/only-export-components": "warn",
  },
  "overrides": [
    {
      "files": ["vite.config.ts", "manifest.config.ts"],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}